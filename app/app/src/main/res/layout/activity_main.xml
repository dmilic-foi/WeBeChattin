<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:onClick="onClickLoginButton"
        android:text="Login" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:onClick="onClickRegistrationButton"
        android:text="Registration" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="286dp"
        android:layout_height="202dp"
        android:layout_alignStart="@+id/registrationButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-81dp"
        android:layout_marginTop="53dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-190dp"
        android:layout_marginBottom="228dp"
        android:layout_toStartOf="@+id/loginButton"
        android:text="Seems like you haven't used our app before :) " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="267dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="Please, register using your phone number and enjoy chatting with your contact list!" />

</RelativeLayout>